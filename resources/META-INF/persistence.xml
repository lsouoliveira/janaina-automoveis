<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

 <persistence-unit name="default">
   <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

   
   <class>com.ufc.janaina.models.Veiculo</class>
   <class>com.ufc.janaina.models.Montadora</class>
   <class>com.ufc.janaina.models.Cliente</class>
   <class>com.ufc.janaina.models.Usuario</class>
   <class>com.ufc.janaina.models.Vendedor</class>
   <class>com.ufc.janaina.models.Venda</class>
   <class>com.ufc.janaina.models.FormaPagamento</class>
   <class>com.ufc.janaina.models.Orcamento</class>
   <class>com.ufc.janaina.models.Teste</class>
   <class>com.ufc.janaina.models.Avaliacao</class>
   
   

   <properties>
     <property name="javax.persistence.jdbc.driver" 
             value="org.postgresql.Driver" />
    <property name="javax.persistence.jdbc.url" 
            value="jdbc:postgresql://localhost/janaina" />
    <property name="javax.persistence.jdbc.user" 
            value="postgres" />
    <property name="javax.persistence.jdbc.password" 
            value="postgres" />

    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    <property name="hibernate.show_sql" value="true" />
    <property name="hibernate.format_sql" value="true" />
    <property name="hibernate.hbm2ddl.auto" value="update" />

   </properties>
 </persistence-unit>
</persistence>
